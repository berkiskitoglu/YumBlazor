<StatusMessage Message="@StatusMessage" />
<h3>Kurtarma Kodları</h3>
<div class="alert alert-warning" role="alert">
    <p>
        <strong>Bu kodları güvenli bir yerde saklayın.</strong>
    </p>
    <p>
        Cihazınızı kaybederseniz ve kurtarma kodlarına sahip değilseniz, hesabınıza erişimi kaybedersiniz.
    </p>
</div>
<div class="row">
    <div class="col-md-12">
        @foreach (var recoveryCode in RecoveryCodes)
        {
            <div>
                <code class="recovery-code">@recoveryCode</code>
            </div>
        }
    </div>
</div>

@code {
    [Parameter]
    public string[] RecoveryCodes { get; set; } = [];

    [Parameter]
    public string? StatusMessage { get; set; }
}
